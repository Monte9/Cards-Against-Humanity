<header>
  <%= render 'layouts/application' %>
  <%= render 'layouts/menu' %>
</header>

<div id="chat-wrapper">
	<div class="container">
		<h1>Game <%= :id %></h1>
    	<div class="row">
      		<div class="col-sm-8">
      			<h2>Table</h2>
      		</div>
      		<div class="col-sm-4">
      			<h2>Chat Window</h2>
      			<div id="message">
      				<div id="chat">
      				</div>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" id="chatbox" placeholder="Enter a message">
					<button class="btn btn-primary" id="sendChat">Send</button>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="https://js.pusher.com/3.0/pusher.min.js"></script>