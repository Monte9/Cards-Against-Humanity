<header>
  <%= render 'layouts/application' %>
  <%= render 'layouts/menu' %>
</header>

<div id="chat-wrapper">
	<div class="container">
		<h4>Game <%= :id %></h4>
    	<div class="row">
      		<div class="col-sm-10" id="table">
            <div class="row" id="playing-field">
              
            </div>
            <div class="row" id="table-footer">
              <div class="col-sm-3" id="timer">
                
              </div>
              <div class="col-sm-9" id="hand">
                <div class="row">
                  <div class="col-sm-2 white-card">
                    <span class="white-card-text">Being on fire.</span>
                  </div>
                  <div class="col-sm-2 col-sm-offset-1 white-card">
                    <span class="white-card-text">Racism.</span>
                  </div>
                  <div class="col-sm-2 col-sm-offset-1 white-card">
                    <span class="white-card-text">Old-people smell.</span>
                  </div>
                  <div class="col-sm-2 col-sm-offset-1 white-card">
                    <span class="white-card-text">A micro&shy;penis.</span>
                  </div>
                </div>
              </div>
            </div>
      		</div>
      		<div class="col-sm-2">
            <div class="row">
              <div id="player-list">
                <ol>
                  <li><%= current_user.email %></li>
                </ol>
              </div>
            </div>
            <div class="row">
              <div id="message">
                <div id="chat">
                </div>
              </div>
              <div class="form-inline">
                <div class="form-group">
                  <input type="text" class="form-control" id="chatbox" placeholder="Enter a message">
                  <button class="btn btn-default" id="sendChat">Send</button>
                </div>
                
              </div>
            </div>
      			
    			</div>
  		</div>
	</div>
</div>

<script src="https://js.pusher.com/3.0/pusher.min.js"></script>